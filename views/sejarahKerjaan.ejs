        </div>
      </div>
      <!-- div table  -->
      <div class="overflow-x-auto mt-6">
        <table class="table-auto border-collapse w-full">
          <thead>
            <tr
              class="
                rounded-lg
                text-lg
                font-medium
                text-black text-left
                tracking-wide
              "
            >
              <th class="px-4 py-2 bg-zinc-100">Tanggal</th>
              <th class="px-4 py-2 bg-zinc-100">Lokasi</th>
              <th class="px-4 py-2 bg-zinc-100">Pekerjaan</th>
              <th class="px-4 py-2 bg-zinc-100">Personil</th>
            </tr>
          </thead>
          <tbody class="text-base font-medium text-gray-700">
            <tr class="hover:bg-gray-100 border-b border-gray-200 py-10">
              <td class="px-4 py-4">18 Desember 2019</td>
              <td class="px-4 py-4">GI Bekasi</td>
              <td class="px-4 py-4">Recovery Gangguan Trafo 1 (Bucholz)</td>
              <td class="px-4 py-4">
                Hilman, Muflih, Hambali, Yadi, Victor, Wita
              </td>
            </tr>
            <tr class="hover:bg-gray-100 border-b border-gray-200 py-4">
              <td class="px-4 py-4 flex items-center">19 Desember 2019</td>
              <td class="px-4 py-4">GIS Harapan Indah</td>
              <td class="px-4 py-4">Pemeliharaan Bay Plumpang</td>
              <td class="px-4 py-4">Hilman, Hambali, Yadi</td>
            </tr>
            <tr class="hover:bg-gray-100 border-gray-200">
              <td class="px-4 py-4">20 Desember 2019</td>
              <td class="px-4 py-4">Bogor</td>
              <td class="px-4 py-4">TWMT Batch 2</td>
              <td class="px-4 py-4">Muflih, Yadi, Victor, Wita</td>
            </tr>
          </tbody>
        </table>
      </div>
      <!-- pagination -->
      <div
        id="pagination"
        class="
          w-full
          flex
          justify-center
          border-t border-gray-100
          pt-4
          items-center
          font-medium
        "
      >
        <svg
          class="h-6 w-6"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <g opacity="0.4">
            <path
